<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="ru.hse.edu.vafilonov.Ihara.gui.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" gridLinesVisible="true" >
    <AnchorPane fx:id="workingField"  GridPane.columnIndex="0" prefWidth="1000" prefHeight="700"
                onMouseClicked="#workingFieldClickHandler" />
    <HBox GridPane.columnIndex="1">
        <TextField fx:id="argumentText" />
        <Button fx:id="fireButton" text="calculate" onMouseClicked="#fireButtonClickHandler"/>
        <Label fx:id="resultLabel" />
    </HBox>


</GridPane>